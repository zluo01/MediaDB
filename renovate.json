{
  "extends": ["config:base"],
  "schedule": ["after 10pm and before 5am on every weekday", "every weekend"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["@type"],
      "groupName": "type"
    }
  ],
  "postUpdateOptions": ["npmDedupe"]
}
