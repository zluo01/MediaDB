{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "lint-staged",
        "husky",
        "@biomejs/",
        "@jest",
        "jest",
        "ts-jest"
      ]
    },
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ]
    },
    {
      "groupName": "web framework",
      "matchPackagePrefixes": [
        "solid",
        "@solid"
      ]
    },
    {
      "groupName": "tauri",
      "matchPackagePrefixes": [
        "@tauri-apps/",
        "tauri"
      ]
    },
    {
      "groupName": "styling",
      "matchPackagePrefixes": [
        "daisyui",
        "tailwind",
        "tailwindcss",
        "@tailwindcss",
        "autoprefixer",
        "postcss",
        "clsx"
      ]
    },
    {
      "groupName": "utilities",
      "matchPackagePrefixes": [
        "@tanstack",
        "immutable",
        "lodash",
        "zod"
      ]
    },
    {
      "groupName": "build-tools",
      "matchPackagePrefixes": [
        "vite",
        "@vitejs/"
      ]
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
