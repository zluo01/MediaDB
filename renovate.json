{
  "extends": ["config:base"],
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["@types/"],
      "groupName": "types"
    },
    {
      "matchPackagePatterns": ["react"],
      "groupName": "react"
    },
    {
      "matchPackagePatterns": ["electron"],
      "groupName": "electron"
    }
  ],
  "postUpdateOptions": ["npmDedupe"]
}
