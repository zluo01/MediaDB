{
  "name": "mediadb",
  "version": "0.6.0",
  "private": true,
  "description": "manager for movie and tv shows",
  "type": "module",
  "scripts": {
    "vite-dev": "vite",
    "vite-build": "tsc && vite build",
    "tauri": "tauri",
    "dev": "__NV_DISABLE_EXPLICIT_SYNC=1  tauri dev",
    "build": "tauri build",
    "build-debug": "tauri build --debug",
    "format": "prettier --write .",
    "lint": "eslint .",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "test": "jest"
  },
  "dependencies": {
    "@solid-primitives/scheduled": "1.5.0",
    "@tailwindcss/vite": "4.0.17",
    "@tanstack/solid-query": "5.71.0",
    "@tanstack/solid-router": "1.114.29",
    "@tanstack/solid-store": "0.7.0",
    "@tauri-apps/api": "2.4.0",
    "@tauri-apps/plugin-dialog": "2.2.0",
    "@tauri-apps/plugin-log": "2.3.1",
    "@tauri-apps/plugin-notification": "2.2.2",
    "@tauri-apps/plugin-opener": "2.2.6",
    "clsx": "2.1.1",
    "daisyui": "5.0.9",
    "immutable": "5.1.1",
    "lodash": "4.17.21",
    "solid-js": "1.9.5",
    "tailwind-merge": "3.0.2",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@jest/globals": "29.7.0",
    "@tailwindcss/postcss": "4.0.17",
    "@tanstack/eslint-plugin-query": "5.68.0",
    "@tanstack/eslint-plugin-router": "1.114.29",
    "@tanstack/router-plugin": "1.114.30",
    "@tanstack/solid-query-devtools": "5.71.0",
    "@tanstack/solid-router-devtools": "1.114.29",
    "@tauri-apps/cli": "2.4.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/lodash": "4.17.16",
    "@types/node": "22.13.14",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-promise": "7.2.1",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.0",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.17",
    "ts-jest": "29.3.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.28.0",
    "vite": "6.2.5",
    "vite-plugin-solid": "2.11.6",
    "vite-tsconfig-paths": "5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --cache --fix",
      "npm run lint",
      "npm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
