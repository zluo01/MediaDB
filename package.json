{
  "name": "mediadb",
  "version": "0.6.0",
  "private": true,
  "description": "manager for movie and tv shows",
  "type": "module",
  "scripts": {
    "vite-dev": "vite",
    "vite-build": "tsc && vite build",
    "tauri": "tauri",
    "dev": "__NV_DISABLE_EXPLICIT_SYNC=1  tauri dev",
    "build": "tauri build",
    "build-debug": "tauri build --debug",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "test": "jest"
  },
  "dependencies": {
    "@solid-primitives/scheduled": "1.5.3",
    "@tailwindcss/vite": "4.2.1",
    "@tanstack/solid-form": "1.28.3",
    "@tanstack/solid-query": "5.90.23",
    "@tanstack/solid-router": "1.162.4",
    "@tanstack/solid-store": "0.9.1",
    "@tauri-apps/api": "2.10.1",
    "@tauri-apps/plugin-dialog": "2.6.0",
    "@tauri-apps/plugin-fs": "2.4.5",
    "@tauri-apps/plugin-log": "2.8.0",
    "@tauri-apps/plugin-notification": "2.3.3",
    "@tauri-apps/plugin-opener": "2.5.3",
    "clsx": "2.1.1",
    "daisyui": "5.5.19",
    "immutable": "5.1.4",
    "lodash": "4.17.23",
    "solid-js": "1.9.11",
    "tailwind-merge": "3.5.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@jest/globals": "30.2.0",
    "@tanstack/router-plugin": "1.162.4",
    "@tanstack/solid-query-devtools": "5.91.3",
    "@tanstack/solid-router-devtools": "1.162.4",
    "@tauri-apps/cli": "2.10.0",
    "@types/lodash": "4.17.23",
    "@types/node": "24.10.13",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "tailwindcss": "4.2.1",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-solid": "2.11.10",
    "vite-tsconfig-paths": "6.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "biome check --write"
  }
}
