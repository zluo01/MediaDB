{
  "name": "mediadb",
  "version": "0.6.0",
  "private": true,
  "description": "manager for movie and tv shows",
  "type": "module",
  "scripts": {
    "vite-dev": "vite",
    "vite-build": "tsc && vite build",
    "tauri": "tauri",
    "dev": "__NV_DISABLE_EXPLICIT_SYNC=1  tauri dev",
    "build": "tauri build",
    "build-debug": "tauri build --debug",
    "format": "prettier --write .",
    "lint": "eslint .",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "test": "jest"
  },
  "dependencies": {
    "@solid-primitives/scheduled": "1.5.2",
    "@tailwindcss/vite": "4.1.13",
    "@tanstack/solid-form": "1.19.3",
    "@tanstack/solid-query": "5.85.6",
    "@tanstack/solid-router": "1.131.31",
    "@tanstack/solid-store": "0.7.4",
    "@tauri-apps/api": "2.8.0",
    "@tauri-apps/plugin-dialog": "2.4.0",
    "@tauri-apps/plugin-fs": "2.4.2",
    "@tauri-apps/plugin-log": "2.7.0",
    "@tauri-apps/plugin-notification": "2.3.1",
    "@tauri-apps/plugin-opener": "2.5.0",
    "clsx": "2.1.1",
    "daisyui": "5.1.8",
    "immutable": "5.1.3",
    "lodash": "4.17.21",
    "solid-js": "1.9.9",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@jest/globals": "30.0.5",
    "@tailwindcss/postcss": "4.1.13",
    "@tanstack/eslint-plugin-query": "5.83.1",
    "@tanstack/eslint-plugin-router": "1.131.2",
    "@tanstack/router-plugin": "1.131.31",
    "@tanstack/solid-query-devtools": "5.85.6",
    "@tanstack/solid-router-devtools": "1.131.31",
    "@tauri-apps/cli": "2.8.4",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/lodash": "4.17.20",
    "@types/node": "24.3.1",
    "@typescript-eslint/parser": "8.42.0",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-solid": "0.14.5",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.1.6",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "4.1.13",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0",
    "vite": "7.1.4",
    "vite-plugin-solid": "2.11.8",
    "vite-tsconfig-paths": "5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --cache --fix",
      "pnpm run lint",
      "pnpm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
