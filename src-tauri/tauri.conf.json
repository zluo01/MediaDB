{
  "productName": "mediadb",
  "version": "0.5.2",
  "identifier": "mediadb",
  "build": {
    "beforeDevCommand": "npm run vite-dev",
    "beforeBuildCommand": "npm run vite-build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MediaDB",
        "maximized": true,
        "minWidth": 1280,
        "minHeight": 720
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "$APPDATA/covers/**"
        ],
        "enable": true
      },
      "csp": null
    }
  }
}
