{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"*.ts",
			"*.tsx",
			"*.mts",
			"!**/src/routeTree.gen.ts"
		]
	},
	"formatter": {
		"enabled": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"domains": {
			"solid": "recommended"
		},
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noConsole": "error",
				"noShadowRestrictedNames": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useValidAnchor": "off",
				"noStaticElementInteractions": "off",
				"useKeyWithClickEvents": "off",
				"useSemanticElements": "off",
				"noNoninteractiveTabindex": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"arrowParentheses": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"allowWrongLineComments": true,
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": true
		}
	}
}
